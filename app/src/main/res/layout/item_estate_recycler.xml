<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_margin="@dimen/fab_margin_medium"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/fab_margin_medium">

        <ImageView
            android:id="@+id/estate_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_description_picture"
            android:layout_marginHorizontal="@dimen/fab_margin_medium"
            tools:src="@drawable/ic_gallery_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/estate_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                android:gravity="center_vertical"
                tools:text="Flat" />

            <TextView
                android:id="@+id/estate_city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_subtitle"
                android:gravity="center_vertical"
                tools:text="Manhattan" />

            <TextView
                android:id="@+id/estate_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/design_default_color_secondary"
                android:textSize="@dimen/text_size_title"
                android:layout_margin="@dimen/fab_margin_medium"
                android:gravity="center_vertical"
                tools:text="$17,870,000" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>