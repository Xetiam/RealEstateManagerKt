<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/estate_picture_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:src="@drawable/ic_gallery_black_24dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@color/black"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/estate_picture_detail"
        app:layout_constraintEnd_toEndOf="@id/estate_picture_detail"
        app:layout_constraintStart_toStartOf="@id/estate_picture_detail"
        app:layout_constraintTop_toTopOf="@+id/photo_description" />

    <TextView
        android:id="@+id/photo_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin_medium"
        android:gravity="center_horizontal"
        android:paddingVertical="@dimen/fab_margin_large"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_subtitle"
        app:layout_constraintBottom_toBottomOf="@id/estate_picture_detail"
        app:layout_constraintEnd_toEndOf="@id/estate_picture_detail"
        app:layout_constraintStart_toStartOf="@id/estate_picture_detail"
        tool:text="@string/lorem_ipsum_title" />
</androidx.constraintlayout.widget.ConstraintLayout>